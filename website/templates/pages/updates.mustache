<!-- Main Content -->
<main>
    <h1 class="page-title">{{pageHeading}}</h1>

    <div class="search-bar">
        <input type="text" class="search-input" placeholder="{{searchPlaceholder}}">
        <button class="search-button">ğŸ”</button>
