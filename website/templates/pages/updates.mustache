{{< layout}}
{{$main}}
<!-- Hero Section -->
<section class="hero hero-small{{#heroVideo}} has-video{{/heroVideo}}">
    {{> hero-video}}
    <div class="hero-content">
        <h1>{{heroTitle}}</h1>
        <p>{{heroSubtitle}}</p>
    </div>
</section>

<!-- Main Content -->
<section id="updates-content">
    <div class="section-container">
        <!-- Search and Filter Controls Panel -->
        <div class="controls-panel">
            <div class="controls-grid">
                {{> search-bar}}
                {{> filters}}
            </div>
        </div>

        {{> updates-posts}}
    </div>
</section>
{{/main}}
{{/layout}}