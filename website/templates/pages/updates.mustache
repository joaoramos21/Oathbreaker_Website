    <div class="patch-notes">
        {{#patchNotes}}
        <div class="patch-item">
            <div class="patch-content">
                <div class="patch-header">
                    <h2 class="patch-title">{{title}}</h2>
                    <span class="patch-date">{{date}}</span>
                </div>
                <div class="patch-divider"></div>
                <div class="patch-badges">
                    <div class="badge version">{{version}}</div>
                    {{#isLatest}}
                    <div class="badge latest">latest</div>
                    {{/isLatest}}
                </div>
                {{#sections}}
                <h3 class="patch-section-title{{#isRelease}} release{{/isRelease}}">{{title}}</h3>
                <ul class="patch-list">
                    {{#items}}
                    <li>{{.}}</li>
                    {{/items}}
                </ul>
                {{/sections}}
            </div>
        </div>
        {{/patchNotes}}
    </div>

