<!-- Search Bar Component -->
<div class="controls-search">
    <input 
        type="text" 
        id="search-input" 
        class="search-input" 
        placeholder="{{searchPlaceholder}}"
        aria-label="Search updates"
    >
    <button 
        class="search-button" 
        id="search-button"
        aria-label="Search"
        type="button"
    >
        <span>🔍</span>
    </button>
</div>
